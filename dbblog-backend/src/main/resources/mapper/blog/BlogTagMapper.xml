<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.dblearn.blog.manage.blog.mapper.BlogTagMapper">

    <select id="listByArticleId" resultType="cn.dblearn.blog.manage.blog.entity.BlogTag">
        select bt.* from blog_tag bt left join blog_article_tag bat on bt.tag_id=bat.tag_id
        <where>
            bat.article_id=#{articleId}
        </where>
    </select>
</mapper>
